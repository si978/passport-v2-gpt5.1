# 外部暴露端口（前端 Nginx，同时承载 /api 反代）
HTTP_PORT=8080
ADMIN_PORT=18081

# Postgres（生产建议改成强密码，并做好备份）
POSTGRES_DB=passport
POSTGRES_USER=passport
POSTGRES_PASSWORD=passport

# Metrics（可选）
# - 生产环境下 /api/metrics 默认只允许私网/本机访问
# - 如需公网抓取/Prometheus 外部抓取，设置 METRICS_TOKEN 并使用：
#   Authorization: Bearer <token>
METRICS_TOKEN=

# Admin portal isolation
ADMIN_APP_ID=admin

# Admin roles (optional)
# ADMIN_ROLE_MAP=9=OPERATOR,8=SUPPORT,7=TECH
ADMIN_ROLE_MAP=

# Admin portal basic auth (optional, recommended when you cannot IP-allowlist ADMIN_PORT)
# ADMIN_BASIC_USER=ops
# ADMIN_BASIC_PASS=change-me
ADMIN_BASIC_USER=
ADMIN_BASIC_PASS=
